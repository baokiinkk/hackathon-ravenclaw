<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.baokiin.hackathon.ui.main.BitmapAdapter.BitmapVHData" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/shape_boder_image"
        >
        <ImageView
            android:id="@+id/imvInfoItmAvatar"
            android:scaleType="fitXY"
            android:padding="5dp"
            tools:src="@drawable/ic_launcher_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <CheckedTextView
            android:id="@+id/cbInfoItmCheck"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="1"
            android:paddingStart="6dp"
            android:gravity="center"
            android:background="@drawable/shape_tron"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            />
    </FrameLayout>
</layout>

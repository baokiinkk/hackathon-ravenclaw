<resources xmlns:tools="http://schemas.android.com/tools">
    <item name="hint" type="id" />

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/color_hint</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:actionMenuTextColor">@color/color_hint</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ButtonNormal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonRed" parent="ButtonNormal">
        <item name="android:background">@drawable/shape_bd081c_bg_corner_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonDawnPink" parent="ButtonNormal">
        <item name="android:background">@drawable/shape_f9e5e8_bg_corner_16</item>
        <item name="android:textColor">@color/color_bd081c</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
